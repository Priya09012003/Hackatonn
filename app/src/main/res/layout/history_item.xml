<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="#f5f7ff"
    app:cardCornerRadius="8dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/DeskId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Desk ID"
            android:textColor="#898989"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/name"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DeskId"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins"
            android:text="Name                 "
            android:textColor="#898989"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bookedon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins"
            android:text="Booked on"
            android:textColor="#898989"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bookedontv"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_below="@+id/name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/bookedon"
            android:text=":  31 may 2022 at 02:00PM"
            android:textColor="#1E1E1E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/deskidn"
            android:layout_width="38dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="191dp"
            android:layout_toEndOf="@+id/DeskId"
            android:fontFamily="@font/poppins"
            android:text=":  12345"
            android:textColor="#1E1E1E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nametv"
            android:layout_width="93dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins"
            android:text=":  TextView"
            android:textColor="#1E1E1E"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>